{
  "name": "eslint-config-moving-meadow",
  "version": "1.1.1",
  "description": "eslint configuration for moving meadow projects",
  "main": "eslint-config.js",
  "files": [
    "*.js",
    "rule-sets",
    "src",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "npm-run-all lint:eslint lint:prettier",
    "lint:eslint": "eslint --config eslint-config.js --fix src test",
    "lint:prettier": "prettier --loglevel warn --check *.js *.json",
    "lint:fix": "npm-run-all lint:fix:*",
    "lint:fix:eslint": "eslint --config eslint-config.js --fix src test",
    "lint:fix:prettier": "prettier --loglevel warn --write *.js *.json",
    "update-dependencies": "npm-run-all upem:update upem:install lint:prettier:fix",
    "upem:install": "npm install",
    "upem:update": "npm outdated --json | upem",
    "test": "jest --coverage"
  },
  "keywords": [],
  "author": "Sander Verweij (https://sverweij.github.io/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sverweij/eslint-config-moving-meadow"
  },
  "bugs": {
    "url": "https://github.com/sverweij/eslint-config-moving-meadow/issues"
  },
  "homepage": "https://github.com/sverweij/eslint-config-moving-meadow",
  "license": "MIT",
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-budapestian": "1.1.1",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-mocha": "6.3.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-unicorn": "15.0.1",
    "jest": "24.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "upem": "3.1.2"
  },
  "peerDependencies": {
    "eslint-config-prettier": ">=6.10.0",
    "eslint-plugin-budapestian": ">=1.1.1",
    "eslint-plugin-import": ">=2.20.0",
    "eslint-plugin-mocha": ">=6.3.0",
    "eslint-plugin-node": ">=11.0.0",
    "eslint-plugin-security": ">=1.4.0",
    "eslint-plugin-unicorn": ">=15.0.1"
  },
  "upem": {
    "donotup": [
      {
        "name": "eslint-plugin-unicorn",
        "because": "eslint-plugin-unicorn 16 and up don't support node 8 anymore, while moving-meadow still does"
      },
      {
        "name": "jest",
        "because": "jest 25 and up borks on install on node 8 (while sort 'officially' still supported). As we want to run ci on node 8 => stay downgraded on jest 24 for as long as that is necessary."
      },
      {
        "name": "prettier",
        "because": "prettier 2 and up don't support node 8 anymore, while moving-meadow still does"
      }
    ]
  },
  "jest": {
    "clearMocks": true,
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "exclude": [
          "test/**/*",
          "coverage/**/*",
          "tmp*"
        ],
        "all": true
      }
    }
  },
  "engines": {
    "node": "^8.10||^10||^12||>=13"
  }
}
